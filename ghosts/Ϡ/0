    };
    $G->{View} = ($G->{floozal} || $H->{sky})->spawn_floozy($G, "Ϡ", $style);
  arr: |
    my ($name, $thing) = %$ar;
    my $S = Arr[$name, $thing];
    G crawl ->RW;
    G crawl ->T($thing);
    Say "Ϡ ".G(crawl)->W->desize;
    $H->Gf("T/splat")->w("Splat", { ttt => G(crawl)->W, view => $G->{View} });
  

