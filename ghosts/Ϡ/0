  arr: |
    my ($name, $thing) = %$ar;
    my $S = Arr[$name, $thing];
    
    start_timer();
    my @order = (
      G crawl,
      G yle,
      G uxt,
    );
    my $UP;
    my @time;
    G crawl ->{max_depth} = 1;
    for my $g (@order) {
        my $what = $UP ? $UP->W : $thing;
        $g->RW;
        $g->T($what);
        $UP = $g;
        push @time, $g->W->desize()." ".show_delta();
    }
    Say @time;
    
    $G->timer(4, sub {
    $H->Gf("T/splat") Tw Splat(Ϡ1 => G(crawl)->W, view => $G->{View} );
