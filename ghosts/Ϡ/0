name: Ϡ
etc: intoraction...
tractors:
  - K: 'Ϡt'
    arr_if: |
      $name && $name ne "0" && $name ne "1" || die;
    B_: |
      $name
    first_time: |
      my $style = "padding: 1em;position:absolute;overflow:hidden;"
      ."top:1em;left:40%;border:5px solid green;width:17em;z-index:20;";
      $S->{V} = ($G->{floozal} || $H->{sky})->spawn_floozy($G, $name, $style);
      $S->{V}->{S} = $S; # TUXTY
    crawl: |
      my $C = $S->{Cr} ||= $G->Gc("T/crawl");
      $C->RW;
      $C->T($thing);
      return $C->W;
      
      
    nonfirst_times: |
      $S->{view}->fadehtml();
    print: |
      $S->{K} .": ". $S->{B}->{_}
hooks:
  arr: |
    my ($name, $thing) = %$ar;
    my $A = Arr[$name, $thing];
    my $W = w $A crawl;
    
    
    
  getstarted: |
    $G->unrush('getstarted') || return;
    
    $H->Say("Ϡ");
    
    #w somewhere(thing => w default_somewhere);

