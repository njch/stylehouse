name: Ï 
etc: intoraction...
tractors:
  - K: 'Ï t'
    arr_if: |
      $name && $name ne "0" && $name ne "1" || die;
    B_: |
      $name
    first_time: |
      my $style = "padding: 1em;position:absolute;overflow:hidden;"
      ."top:1em;left:40%;border:1px solid black;width:17em;z-index:20;";
      $S->{V} = ($G->{floozal} || $H->{sky})->spawn_floozy($G, $name, $style);
      $S->{V}->{S} = $S; # TUXTY
      $S->{crawl} = $G->Gc("T/crawl");
      $S->{script} = $G->Gc("W/script");
    nonfirst_times: |
      $S->{V}->fadehtml();
    print: |
      $S->{K} .": ". $S->{B}->{_}
    tocrawl: |
      $S->{crawl}->RW;
      $S->{crawl}->T($thing);
    toscript: |
      $S->{script}->T($S->{crawl}->W);
hooks:
  any_init: |
    #w getstarted;
  arr: |
    my ($name, $thing) = %$ar;
    my $S = Arr[$name, $thing];
    w $S tocrawl;
    w $S toscript;
    Say "Ï , ".$S->{script}->W->describe_size;
  
  getstarted: |
    $G->unrush('getstarted') || return;

