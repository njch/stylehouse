name: Ϡ
etc: intoraction...
tractors:
  - K: 'Ϡt'
    arr_if: |
      $name && $name ne "0" && $name ne "1" || die;
    B_: |
      $name
    first_time: |
      my $style = "padding: 1em;position:absolute;overflow:hidden;"
      ."top:1em;left:40%;border:1px solid black;width:17em;z-index:20;";
      $S->{V} = ($G->{floozal} || $H->{sky})->spawn_floozy($G, $name, $style);
      $S->{V}->{S} = $S; # TUXTY
      $S->{crawl} = $G->Gc("T/crawl");
      $S->{script} = $G->Gc("W/script");
    nonfirst_times: |
      $S->{V}->fadehtml();
    print: |
      $S->{K} .": ". $S->{B}->{_}
      
    tocrawl: |
      my $C = $S->{crawl};
      $C->RW;
      $C->T($thing);
    toscript: |
      my $W = $S->{crawl}->W;
      my $s = $S->{script};
      $s->T($W);
hooks:
  any_init: |
    w getstarted;
  arr: |
    my ($name, $thing) = %$ar;
    my $S = Arr[$name, $thing];
    w $S tocrawl;
    w $S toscript;
    Say "Ϡ, ".$S->{script}->W->describe_size;
  
  getstarted: |
    $G->unrush('getstarted') || return;
    
    $H->Say("Ϡ");
    
    $G Tw arr(nowhere => "yla");

