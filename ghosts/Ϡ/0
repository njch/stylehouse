tractors:
  - K: 'Ϡt'
    max_populi: 2
    arr_if: |
      $name && $name ne "0" && $name ne "1" || die;
    B_: |
      $name
    print: |
      $S->{B}->{_}      
hooks:
  V:
    ux:
      styles: cardboard ux
    ux2:
      styles: cardboard ux xu
  styles:
    cardboard: |
      qw{
         position:absolute
         color:#3bc 
      }, 'border:2px solid #003'
      
    ux: |
      qw{
          left:10% top:10%     font-size:10pt
      
              min-height:20em min-width:30em
              max-width:30em
      }
    xu: |
      qw'right:10% background:#513'
  GG:
    C/odon: 1
    T/crawl: 1
    O/splat: 1
    T/ux: 1
  any_child_recoded_init: |
    w ux;
  ux: |
    my $g = G(odon)
    ||
    return Say "No Codon?";
    $g->RW;
    $g->w('percolate');
    
    my $gux = $G->Gf('ux$');
    gux.view = G.V.ux;
    g.ux = $gux;
    $gux->RW;
    w wux;
    saybl "ux ".$G->F_delta();
  wux: |
    $G->Gf('ux$')->w('ux', {Ls=>G(odon)->W->CS});

