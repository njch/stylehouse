name: Ϡ
etc: intoraction...
tractors:
  - K: 'Ϡt'
    arr_if: |
      $name && $name ne "0" && $name ne "1" || die;
    B_: |
      $name
    first_time: |
      $S->{V}->{S} = $S; # TUXTY
      $S->{crawl} = $O->Gc("T/crawl");
    print: |
      $S->{K} .": ". $S->{B}->{_}
    tocrawl: |
      $S->{crawl}->RW; 
      $S->{crawl}->T($thing);
hooks:
  fresh_init: |
    my $style = join "", map { /;$/ ? $_ : "$_;" } qw{
        position:absolute overflow:hidden border:1px solid black;
          top:30% left:20% background:#fc8
          -webkit-transform:scale(0.7,0.7)
    };
    $G->{View} = ($G->{floozal} || $H->{sky})->spawn_floozy($G, "Ϡ", $style);
  any_init: |
    $H->Gf("T/splat")->w("clear", {splatname => "Ϡ"});
  arr: |
    my ($name, $thing) = %$ar;
    my $S = Arr[$name, $thing];
    w $S tocrawl;
    Say "Ϡ, ".$S->{crawl}->W->describe_size;
    $H->Gf("T/splat")->w("Splat", { Ϡ => $S->{crawl}->W, view => $G->{View} });
  
  getstarted: |
    $G->unrush('getstarted') || return;

