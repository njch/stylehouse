    $O->w(somewhere=>{thing=>$eh, md=>2}) if $eh;
    
  arr: |
    my ($name, $thing) = %$ar; 
    my $S = Arr[$name, $thing];
    
    my $g = G crawl;
    $g->{max_depth} = 1;
    $g->RW;
    $g->T($thing);
    
    w uxtou(g=>$g);
  uxtou: |
    start_timer();
    
    my $yG = G yle;
    $yG->RW;
    $yG->T(    $g->W );
    my $uG = G uxt;
    $uG->RW;
