name: Ï 
etc: intoraction...
tractors:
  - K: 'Ï t'
    arr_if: |
      $name && $name ne "0" && $name ne "1" || die;
    B_: |
      $name
    first_time: |
      my $style = "position:absolute;overflow:hidden;border:1px solid black;"
          ."top:0px;right:10em;-webkit-transform: scale(-1,1);";
      $S->{V} = ($G->{floozal} || $H->{sky})->spawn_floozy($G, $name, $style);
      $S->{V}->{S} = $S; # TUXTY
      $S->{crawl} = $O->Gc("T/crawl");
    print: |
      $S->{K} .": ". $S->{B}->{_}
    tocrawl: |
      $S->{crawl}->RW; 
      $S->{crawl}->T($thing);
hooks:
  any_init: |
    #w getstarted;
  arr: |
    my ($name, $thing) = %$ar;
    my $S = Arr[$name, $thing];
    w $S tocrawl;
    Say "Ï , ".$S->{crawl}->W->describe_size;
  
  getstarted: |
    $G->unrush('getstarted') || return;

