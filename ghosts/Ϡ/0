name: Ϡ
etc: intoraction...
tractors:
  - K: 'Ϡt'
    max_populi: 2
    arr_if: |
      $name && $name ne "0" && $name ne "1" || die;
    B_: |
      $name
    print: |
      $S->{K} .": ". $S->{B}->{_}
hooks:
  fresh_init: |
    $G->Gc("T/crawl", "T/ravel");
    $G->Gc("T/style", "T/ravel");
    
    my $style = join "", map { /;$/ ? $_ : "$_;" } qw{
        position:absolute overflow:hidden border:1px solid black;
          top:20em left:-10% background:#765 max-width: 40%;
          -webkit-transform:scale(0.7,0.7)
    };
    $G->{View} = ($G->{floozal} || $H->{sky})->spawn_floozy($G, "Ϡ", $style);
    $G->{View2} = ($G->{floozal} || $H->{sky})->spawn_floozy($G, "Ϡ2", $style."left: 10%;");
  arr: |
    my ($name, $thing) = %$ar;
    my $S = Arr[$name, $thing];
    
    G crawl ->RW;
    G crawl ->T($thing);
    Say "Ϡ ".G(crawl)->W->desize;
    G style ->RW;
    G style ->T(G(crawl)->W);
    
    $H->Gf("T/splat") Tw Splat(ttt   => G(crawl)->W, view => $G->{View} );
    $H->Gf("T/splat") Tw Splat(swamp => G(style)->W, view => $G->{View2});
  

