name: Lyricoso writoro
hooks:
  load_ways_post: |
    unless (G splat ) {
        G TT ->G("Travel/splat");
        #G TT ->G("Travel/Spill");
        
        G TT ->G("Travel/crawl");
        G TT ->G("Lyrico/follow");
        G TT ->G("Lyrico/ob");
        
        
        w set_follow;
    }
    
    w getstarted;
  any_child_recoded_init: |
    w getstarted;
  set_follow: |
    G follow ->RW;
    G follow T G ob;
    G follow T $H;
    G follow T $O;
    G follow T G(follow)->W;
    G follow T $H->data->{Codon};
    G follow T $H->data->{Ghost};
    G follow T \@F;
    
    G splat Tw Splat(wing => G(follow)->W);
  getstarted: |
    $G->unrush('getstarted') || return;
    
    my $codons = $H->data->{Codon};
    $H->Say("áºž");
    
    my $thing = ["".localtime, $O];
    
    my $u = G crawl ->crank(max_depth=>2);
        w somewhere[$thing];
    $u->();
  somewhere: |
    my $thing = $ar->{thing};
    my $wormhole = $ar->{wormhole};
    
    my $Cr = G crawl;
    start_timer();
    w resurround;
    
    if ($wormhole) {
        $G->{the_W} = $wormhole;
    }
    else {
        $Cr->RW;
        
        $G->w("R", {for => G(crawl)}, G(ob));
        
        $Cr->T($thing, undef, $G->nw()->from({print=>'"L0sw"',F => [@F]}));
        
        $G->{the_W} = $Cr->W;
    }
    my $crawltime = show_delta();

    w splat_wormholes;
    
    Say "W for ".($wormhole->{G}->{name}||"$thing")."\n$crawltime   ".show_delta();
  splat_wormholes: |
    return unless G(crawl);
    G splat Tw Splat(trev => G(crawl)->W);
    G splat Tw Splat(ob   => G(ob)->W   );
    
  splatmenues: |
    my $ob = G(ob)->W;
    ob => sub { 
    
    w somewhere(wormhole => $ob) };

