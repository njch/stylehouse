name: Lyricoso writoro
hooks:
  load_ways_post: |
    say 'yeha!';
    w init;
  init: |
    unless (G splat ) {
        G TT ->G("Travel/splat");
        G TT ->G("Travel/crawl");
        G TT ->G("Lyrico/follow");
    }
    w somewhere;
  somewhere: |
    my $thing = $ar->{thing} || $O;
    
    G crawl ->W->{script} = [];
    
    G follow T $thing;
    G crawl T $thing;
    
    G splat ->w("splat_wormhole", {
        splatname => 'trev',
        sky => $H->{sky},
        wormhole => G crawl ->W,
    });
    
    G splat ->w("splat_wormhole", {
        splatname => 'wing',
        sky => $H->{sky},
        wormhole => G follow ->W,
    });
    
    
    
  menu: |
    my $v = $sky->spawn_floozy($O->{wni}++, "position:absolute;");
    say "Something!\n" for 1..20;
something:
  else: 1

