name: Lyricoso writoro
hooks:
  load_ways_post: |
    say 'yeha!';
    w init;
  init: |
    unless (G splat ) {
        G TT ->G("Travel/splat");
        G TT ->G("Travel/crawl");
        G TT ->G("Lyrico/follow");
        G TT ->G("Lyrico/ob");
    }
    #timer 0.3 { $H->info("Alright MATE!?") };
    my $codons = $H->data->{Codon};
    timer 0.4 { w somewhere(thing => $codons) };
  resurround: |
    G follow ->RW;
    
    G follow T G ob;
    G follow T $H;
    G follow T $O;
    G follow T $thing;
    
  reflect: |
    G splat Tw splat_wormhole(trev => $wormhole);
    
    G splat Tw splat_wormhole(wing => G(follow)->W );
    
    G splat Tw splat_wormhole(splatselves => G(splat)->W );
    
  somewhere: |
    my $thing = $ar->{thing};
    my $wormhole = $ar->{wormhole};
    
    w resurround;
    unless ($wormhole) {
          die "no thing no wormhole!" unless $thing;
        G ob ->RW;
        G crawl T ->{TT} = G ob;
        G crawl ->RW;
        G crawl T $thing;
        $wormhole = G(crawl)->W;
    }
    
    w reflect( wormhole => $wormhole );
    
  somewormhole: |
      Say "raw Wormhole: $wormhole->{name}";
    
    w resurround;
    w reflect(wormhole => $wormhole);
  splatmenues: |
    my $ob = G(ob)->W;
    ob => sub { w somewhere(thing => $ob) };

