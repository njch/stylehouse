name: Lyricoso writoro
hooks:
  load_ways_post: |
    say 'yeha!';
    w init;
  init: |
    unless (G splat ) {
        G TT ->G("Travel/splat");
        G TT ->G("Travel/crawl");
        G TT ->G("Lyrico/follow");
        G TT ->G("Lyrico/ob");
    }
    #timer 0.3 { $H->info("Alright MATE!?") };
    my $codons = $H->data->{Codon};
    timer 0.4 { w somewhere(thing => $codons) };
  somewhere: |
    my $thing = $ar->{thing} || $O;
    
    
    G ob ->RW;
    G crawl ->RW;
    G follow ->RW;
    
    G crawl T ->{TT} = G ob;
    
    G follow T G ob;
    G follow T $H;
    G follow T $thing;
    
    G crawl T $thing;
    
    my $Gs = G splat;
    G splat Tw splat_wormhole(trev => G(crawl)->W );
    
    G splat Tw splat_wormhole(wing => G(follow)->W );
    
    G splat Tw splat_wormhole(splatselves => G(splat)->W );
    
    Say "seen $thing";
    
  splatob: |
    G splat Tw splat_wormhole(ob => G(ob)->W );
    
  menu: |
    my $v = $sky->spawn_floozy($O->{wni}++, "position:absolute;");
    say "Something!\n" for 1..20;
something:
  else: 1

