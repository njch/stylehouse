name: Lyricoso writoro
hooks:
  load_ways_post: |
    say 'yeha!';
    w init;
  init: |
    unless (G splat ) {
        G TT ->G("Travel/splat");
        G TT ->G("Travel/crawl");
        G TT ->G("Lyrico/follow");
        G TT ->G("Lyrico/ob");
    }
    timer 0.3 { $H->info("Alright MATE!?") };
    timer 0.4 { w somewhere };
  somewhere: |
    my $thing = $ar->{thing} || $O;
    
    G ob ->RW;
    G crawl ->RW;
    G follow ->RW;
    
    G crawl T ->{TT} = G ob;
    
    G follow T G ob;
    G follow T $H;
    G follow T $thing;
    
    G crawl T $thing;
    
    
    G splat ->w("splat_wormhole", {
        somewhereness => $G,
        splatname => 'trev',
        sky => $H->{sky},
        wormhole => G crawl ->W,
    });
    
    G splat ->w("splat_wormhole", {
        somewhereness => $G,
        splatname => 'wing',
        sky => $H->{sky},
        wormhole => G follow ->W,
    });
    
    $H->timer(2, sub {
        G splat ->w("splat_wormhole", {
            somewhereness => $G,
            splatname => 'ob',
            sky => $H->{sky},
            wormhole => G ob ->W,
        });
    });
    return;
    
  splatob: |
    
    
  menu: |
    my $v = $sky->spawn_floozy($O->{wni}++, "position:absolute;");
    say "Something!\n" for 1..20;
something:
  else: 1

