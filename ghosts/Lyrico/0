name: Lyricoso writoro
hooks:


  load_ways_post: |
    unless (G splat ) {
        G TT ->G("Travel/splat");
        G TT ->G("Travel/Spill");
        
        G TT ->G("Travel/crawl");
        G TT ->G("Lyrico/follow");
        G TT ->G("Lyrico/ob");
        w set_follow;
    }
    
    
    w getstarted;
  set_follow: |
    G follow ->RW;
    G follow T G ob;
    G follow T $H;
    G follow T $O;
    G follow T G(follow)->W;
    G follow T $H->data->{Codon};
    G follow T $H->data->{Ghost};
    G follow T \@F;
    G splat Tw Splat(wing => G(follow)->W );

  getstarted: |
    $G->{unrushy}++;
    $G->unrush('getstarted') || return;
    my $codons = $H->data->{Codon};
    $H->Say(" áºž!");
    $H->timer( 0.1, sub {
        w somewhere(thing => $O);
    });
  somewhere: |
    my $thing = $ar->{thing};
    my $wormhole = $ar->{wormhole};
    
    start_timer();
    w resurround;
    if ($wormhole) {
        G(crawl)->{W} = $wormhole;
    }
    else {
        G crawl ->RW;
        
        G ob ->RW;
        G crawl T ->{TT} = G ob;
        
        G crawl T $thing;
    }
    my $crawltime = show_delta();

    G follow T $thing;
    
    w splat_wormholes;
    
    Say "W for ".($wormhole->{G}->{name}||"$thing")."\n$crawltime   ".show_delta();
  splat_wormholes: |
    return unless G(crawl);
    G splat Tw Splat(trev => G(crawl)->W);
    G Spill Tw Spill(ob => G(ob)->W);
    
    #G splat Tw Splat(splatselves => G(splat)->W );
    
  splatmenues: |
    my $ob = G(ob)->W;
    ob => sub { w somewhere(wormhole => $ob) };

