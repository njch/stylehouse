name: Lyricoso writoro
hooks:
  load_ways_post: |
    say 'yeha!';
    w init;
  init: |
    unless (G splat ) {
        G TT ->G("Travel/splat");
        G TT ->G("Travel/crawl");
        G TT ->G("Lyrico/follow");
    }
    w somewhere;
    w colorsky;
  colorsky: |
    $H->JS($O->{sky},".animate({backgroundColor: '#6B8FB2'}, 5000);");

    timer 0.1 w colorsky;
  somewhere: |
    my $thing = $ar->{thing} || $O;
    
    G crawl ->W->{script} = [];
    
    G follow ->T->travel($thing);
    $G->{_crawl}->T->travel($thing);
    
    say "Yayaya!";
    $G->{_splat}->w("splat_wormhole", {
        splatname => 'trev',
        sky => $O->{sky},
        wormhole => $G->{_crawl}->W,
    });
    
    $G->{_splat}->w("splat_wormhole", {
        splatname => 'wing',
        sky => $O->{sky},
        wormhole => $G->{_follow}->W,
    });
    
    
    
  menu: |
    my $v = $sky->spawn_floozy($O->{wni}++, "position:absolute;");
    say "Something!\n" for 1..20;
something:
  else: 1

