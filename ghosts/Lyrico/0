name: Lyricoso writoro
hooks:
  load_ways_post: |
    say 'yeha!';
    w init;
  init: |
    unless (G splat ) {
        G TT ->G("Travel/splat");
        G TT ->G("Travel/crawl");
        G TT ->G("Lyrico/follow");
        G TT ->G("Lyrico/ob");
    }
    #timer 0.3 { $H->info("Alright MATE!?") };
    my $codons = $H->data->{Codon};
    timer 0.4 { w somewhere(thing => $codons) };
    G follow T G ob;
    G follow T $H;
    G follow T $O;
  resurround: |
    #G follow ->RW;
    
  reflect: |
    G splat Tw splat_wormhole(trev => $wormhole);
    
    G splat Tw splat_wormhole(wing => G(follow)->W );
    
    my $nonscript = {script => [@{G(splat)->W->{script}}] };
    G splat Tw splat_wormhole(splatselves => $nonscript );
    
  somewhere: |
    my $thing = $ar->{thing};
    my $wormhole = $ar->{wormhole};
    my $line = $ar->{line};
    
    w resurround;
        if ($line) {
            Say "Line into $line->{t}";
            $thing = $line->{t};
            #$line->{t};
        }
    unless ($wormhole) {
        G ob ->RW;
        G crawl ->RW;
        G crawl T ->{TT} = G ob;
        G crawl T $thing;
        $wormhole = G(crawl)->W;
    }

    G follow T $thing;
    Say "Wormhole coming: $wormhole->{name}";
    
    w reflect( wormhole => $wormhole );
    
  splatmenues: |
    my $ob = G(ob)->W;
    ob => sub { w somewhere(wormhole => $ob) };

