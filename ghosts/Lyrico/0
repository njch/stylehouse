name: Lyricoso writoro
hooks:
  load_ways_post: |
    say 'yeha!';
    w init;
  init: |
    $G->{_splat} ||= $O->fT->G("Travel/splat");
    $G->{_crawl} ||= $O->fT->G("Travel/crawl");
    $G->{_follow} ||= $O->fT->G("Lyrico/follow");
    w somewhere;
  somewhere: |
    my $thing = $ar->{thing} || $O;
    
    $G->{_crawl}->W->{script} = [];
    
    $G->{_follow}->T->travel($thing);
    $G->{_crawl}->T->travel($thing);
    
    say "Yayaya!";
    $G->{_splat}->w("splat_wormhole", {
        splatname => 'trev',
        sky => $O->{sky},
        wormhole => $G->{_crawl}->W,
    });
    
    $G->{_splat}->w("splat_wormhole", {
        splatname => 'wing',
        sky => $O->{sky},
        wormhole => $G->{_follow}->W,
    });
    
    
    
  menu: |
    my $v = $sky->spawn_floozy($O->{wni}++, "position:absolute;");
    say "Something!\n" for 1..20;
something:
  else: 1

