name: Lyricoso writoro
hooks:
  load_ways_post: |
    say 'yeha!';
    unless (G splat ) {
        G TT ->G("Travel/splat");
        if (0) {
        G(splat)->{floozal} = $H->{sky}->spawn_floozy($G, "Lyricoso",
            "max-width:70%; left:30%; bottom:0px; top:0px;"
            ."position:absolute; overflow-x: scroll;"
            ."border: 2px solid white; z-index: 10; background: #6600FF;"
            ." color: #030; font-weight: bold; ");
        }
        G TT ->G("Travel/crawl");
        G TT ->G("Lyrico/follow");
        G TT ->G("Lyrico/ob");
        
        my $codons = $H->data->{Codon};
        timer 0.4 { w somewhere(thing => $O) };
        G follow T G ob;
        G follow T $H;
        G follow T $O;
        G follow T G(follow)->W;
        G follow T $H->data->{Codon};
        G follow T $H->data->{Ghost};
        G follow T \@F;
    
        G splat Tw splat_wormhole(wing => G(follow)->W );
    }
        
    $H->timer( 0.1, sub { w somewhere(thing => { thing0 => [0,1,2], thing1 => [24,56,22], thing2 => [44,5555,6,6,5,2]}) });
    timer 0.3 { $H->Say("Alright MATE!?") };
    timer 0.5 { $H->Say("ALL_RIGHT_MATE!?") };

  
  init: |
    die "HUR!";
  resurround: |
    
  reflect: |
    
  somewhere: |
    my $thing = $ar->{thing};
    my $wormhole = $ar->{wormhole};
    
    start_timer();
    w resurround;
    if ($wormhole) {
        G(crawl)->{W} = $wormhole;
    }
    else {
        G ob ->RW;
        G crawl ->RW;
        G crawl T ->{TT} = G ob;
        
        G crawl T $thing;
    }
    my $crawltime = show_delta();

    G follow T $thing;
    
    w splat_wormholes;
    
    Say "W for ".($wormhole->{G}->{name}||"$thing")."\n$crawltime   ".show_delta();
  splat_wormholes: |
    return unless G(crawl);
    G splat Tw splat_wormhole(trev => G(crawl)->W);
    
    #G splat Tw splat_wormhole(splatselves => G(splat)->W );
    
  splatmenues: |
    my $ob = G(ob)->W;
    ob => sub { w somewhere(wormhole => $ob) };

