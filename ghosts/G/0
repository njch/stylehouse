
name: Ghost
hooks:
  _load_ways_post: |
    $S->w("load_ways_post");
    my $lwc = $S->{load_ways_count};
    say "LWC $lwc";
    $S->w("any_init");
    $lwc == 1 ?
        w _fresh_init(%$ar)
      : w _recoded_init(%$ar)
    
  _recoded_init: |
    $S->w("recoded_init");
    my $g = $S;
    while ($g->{O} && ref $g->{O} eq "Ghost") {
        $g->w("child_recoded_init") if $g eq $S;
        $g = $g->{O};
        $g->w("any_child_recoded_init");
    }
  _fresh_init: |
    $S->w("fresh_init");

