 - K: ws #c it
   esc 3: |
     my @wtf;
     push @wtf, 'white-space:pre' if $v =~ /p/;
     push @wtf, 'white-space:nowrap' if $v =~ /n/;
     die "many :  @wtf       from $v" if @wtf > 1;
     join ';', @wtf;
