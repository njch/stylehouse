 - K: ab #c solute
   esc 3.3: |
     if ($v =~ /^(\S+:\S+)( \S+:\S+)*$/) {
         my @se = split ' ', $v;
         for (@se) {
             /^(\S+):(\S+)$/;
             $tks->{$1}->{abc} = $2;
         }
         $v = 1;
     }
     elsif ($v ne '1') {
         die "whatab:$v";
     }
     $v = "absolute" if $v eq '1';
     "position:$v";
