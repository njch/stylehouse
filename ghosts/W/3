       }
     mk: | #c smaller event from nonhull $J
       $m = [@$m];
       my $y = shift @$m;
           if ($y eq 'jin') {
               Rw jin $m;
           }
           elsif ($y eq 'X') {
               sayre "Closing $J";
               w G.R del(u=>$J);
           }
           elsif ($y eq 'Jself') {
               Rw Jix ollox $in:J;
           }
           else {die "inv $y       @$m"}
     reS: | #c
       # some
       sayyl "reS  $m";
       my $m = djson $m;
       Rw m.w $name:m.name $m:m.m;
