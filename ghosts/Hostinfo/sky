
name: the sky
hooks:
  load_ways_post: |
    $G->{colours} = ['ff0000','6699FF','3366FF',
    '000099','6B8FB2','290066','6699FF','008F6B',
    'a699FF','4C3380',
    '336699','8F00B2', '666699',
    '336aa9','72a699','000099','6B8FB2','6B8FB2','00CCFF','00CCFF'];
    $H->JS($H->{sky},"animate({backgroundColor: '#00001F'}, 5000);");
    
  touch: |
    push @{$G->{colours}}, shift @{$G->{colours}};
    $H->JS($H->{sky},"animate({backgroundColor: '#$G->{colours}->[0]'}, 1000);");
    

