






name: hostinfo
hooks:
  load_ways_post: |
    unless (G mess ) {
        G TT ->G("Hostinfo/mess");
    }
  throwlog: |
    G mess Tw throwlog(%$ar);
  splatmenues: |
    'db' =>
      sub { 
        Say "WOOHOO! $G->{i}->{G}->{name}";
        $G->{i}->{G}->w('go', {thing => $O->data}); 
      },

    

