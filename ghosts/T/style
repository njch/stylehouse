name: Styling
chains:
 - K: 'Wormhole'
   arr_if: |
     $G->{depth} == 0 && ref $thing eq "Wormhole";
   foreach_travel:
     each: @{$thing->{script}}
     next_thing: $each
   print: |
        $S->{i}
        
 - K: 'Line'
   arr_if: |
     $G->{i}->{K} eq "Wormhole" && ref $thing eq 'HASH' && $thing->{uuid} && $thing->{t}
   print: |
     $thing->{uuid}
   exude: |
     $thing
 
 - K: 'Thing'
   arr_if: |
     $G->{i}->{K} eq "Line" && exists $thing->{t}
   exude: |
     $thing->{t}
        
dials:
  max_depth: 4
  form: 42
hooks:
  fresh_init: |
    #etc
    
    
    
    
    
    
    
    
    #

