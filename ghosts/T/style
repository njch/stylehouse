name: Styling
chains:
 - K: Wormhole
   arr_if: |
     $G->{depth} == 0 && ref $thing eq "Wormhole";
   foreach_travel:
     each: @{$thing->{script}}
     next_thing: $each
   print: |
        $S->{i}
        
 - K_K: Wormhole/Line
   arr_if: |
     ref $thing eq 'HASH' && $thing->{uuid} && $thing->{t}
   exude: |
     $thing
     
 - K_K: Line/Depth
   arr_if: |
     exists $thing->{depth};
   exude: |
     $thing->{depth}
     
 - K_K: Line/WaysOut
   arr_if: |
     $thing->{o}
   exude: |
     $thing->{o}
     
 - K_K: Line/WaysIn
   arr_if: |
     $thing->{i}
   exude: |
     $thing->{i}
     
 - K_K: Line/Thing
   arr_if: |
     $thing->{t}
   exude: |
     $thing->{t}
     
 - K_K: Thing/Way#c
   arr_if: |
     ref $thing eq "Way";
   exude: |
     $thing->{t}
     
 - K_K: Thing/Ghost
   arr_if: |
     ref $thing eq "Ghost"
   exude: |
     $thing
     
 - K_K: Thing/String
   arr_if: |
     ref \$thing eq "SCALAR";
   exude: |
     w t;
