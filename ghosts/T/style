name: Styling
chains:
 - K: 'Wormhole'
   arr_if: |
     $G->{depth} == 0 && ref $thing eq "Wormhole";
   foreach_travel:
     each: @{$thing->{script}}
     next_thing: $each
   print: |
        $S->{i}
        
 - K: 'Line'
   arr_if: |
     $G->{i}->{K} eq "Wormhole" && ref $thing eq 'HASH' && $thing->{uuid} && $thing->{t}
   foreach_travel:
     each: sort keys %$thing
     next_thing: $thing->{$each}
   print: |
        $S->{each}
        
dials:
  max_depth: 1
  form: 42
hooks:
  fresh_init: |
    #etc
    
    
    
    
    
    
    
    
