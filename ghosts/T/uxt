name: Styling
dials:
  max_depth: 7
  form: 42
hooks:

  T_end: |
    my $t = $G->{_trail} ||= [];
    my $xL = $L; 
    
    my $yL = $xL->{t};
    my ($ytw, $ylw) = ([],[]);
    for my $yw (@{$yL->{o}}) {
        if ($yw->{B}->{Li}) {
            push @$ytw, $yw
        }
        else {
            push @$ylw, $yw
        }
    }
    my $yiw = $yL->{i};
    if (!$yiw) {
        $yiw = $G->nw()->from({K=>"TheWayIn"});
    }
    my $xiw = $xL->{i};
    
    my $xso = $xiw->{x};
    my $xs = {};
    
    my @diag = ($xL->{depth}, $yL->{t},);
    
    for my $ya (['l',$ylw],['t',$ytw],['y',[$yiw]]) {
        my ($y,$yww) = @$ya;
        push @diag, map {
            "$y ".
            (ref $_ eq "Way" ?
            ($_->pint ." ~ ".ki($_->{B}->{s}))
            : "iww!www: $_")
        } @$yww
    }
    
    push @$t, \@diag;
    
    # o[ s/...
    # (re)make i s...

    return unless $xL->{depth} == 0;
        
    my $html = "HTML!";
    
    @$r = $html;
    
    $t = {
        t => $t,
        G => $G->{name},
    };
    $G->timer(0.2, sub {
        $O->{O}->w(somewhere=>{thing=>$t,max_depth=>3});
    },"bailout");
   

