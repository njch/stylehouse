name: Styling
dials:
  max_depth: 7
  form: 42
hooks:

  T_end: |
    my $t = $G->{_trail} ||= [];
    my $xL = $L; 
    my $yL = $xL->{t};
    
    push @$t, [join("",("..")x$xL->{depth}), w $yL->{i} print, $yL->{t}];
    
    # o[ s/...
    # (re)make i s...
    
    my $html = "HTML!";
    if ($xL->{depth} == 0) {
        @$r = $html;
    }
    return unless @$t == 10;
    
    $t = {
        t => $t,
        G => $G->{name},
    };
    $G->timer(0.2, sub {
        $O->{O}->w(somewhere=>{thing=>$t,max_depth=>2});
    }, "bailout");
    
    

