name: Styling
dials:
  max_depth: 7
  form: 42
hooks:

  T_end: |
    my $t = $G->{_trail} ||= [];
    my $xL = $L; 
    
    my $yL = $xL->{t};
    my ($ytw, $ylw) = ([],[]);
    for my $yw (@{$yL->{o}}) {
        if ($yw->{B}->{Li}) {
            push @$ytw, $yw
        }
        else {
            push @$ylw, $yw
        }
    }
    my $yiw = $yL->{i} || $G->nw()->from({K=>"notTheWayIn!"});
    my $xiw = $xL->{i};
    
    my $h = {};
    my $ha = sub {
        my ($attr,$y,$w,$thing) = @_;
        push @{$h->{$attr}||=[]}, { y=>$y,w=>$w,t=>$thing };
    };
    
    my $x = {id=>$xL->{uuid}};
    
    for my $ya (['l',$ylw],['t',$ytw],['y',[$yiw]]) {
        my ($y,$yww) = @$ya;
        for my $w (@$yww) {
            w u[$xL, $yL, $ylw, $ytw, $yiw, $xiw,         $y, $w, $ha];
        }
    }
    
    w h[$xL, $yL, $ylw, $ytw, $yiw, $xiw,         $h, $x];
    
    
    w diagontrail[$xL, $yL, $ylw, $ytw, $yiw, $xiw, $x];
    return unless $xL->{depth} == 0;
    @$r = "HTML!";
  h: |
    # grep $h for content, apply whittling...
        
    
  up:
    - h: value
      escape_html: 1
      hh: content
      
    - h: conty
      hh: content
      
    - hh: div
  u: |
    my @w = $G->findways('up');
    for my $up (@w) {
        my $v = $up->{h} 
            ? $G->w("B/s/$up->{h}", {}, $w)
            : $w->find("B/s/$up->{hh}");
        $v = encode_entities($v) if $up->{html};
        $ha->( $up->{hh} => $y,$w, $v );
    }
    
  diagontrail: |
    my @diag = (">$xL->{depth}", $yL->{t}, $x);
    
    for my $ya (['l',$ylw],['t',$ytw],['y',[$yiw]]) {
        my ($y,$yww) = @$ya;
        push @diag, map {
            "!html $y ".
            (ref $_ eq "Way" ?
            ($_->pint             .($y ne 't' ?
                '<t style="color:white;">'.ki($_->{B}->{s}).'</t>' : "") )
            : "iww!www: $_")
        } @$yww
    }
    push @{ $G->{_trail} }, \@diag;
   

