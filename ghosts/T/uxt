name: Styling
dials:
  max_depth: 7
  form: 42
hooks:

  T_end: |
    my $t = $G->{_trail} ||= [];
    my $xL = $L; 
    
    my $yL = $xL->{t};
    my ($ytw, $ylw) = ([],[]);
    for my $yw (@{$yL->{o}}) {
        if ($yw->{B}->{Li}) {
            push @$ytw, $yw
        }
        else {
            push @$ylw, $yw
        }
    }
    my $yiw = $yL->{i} || $G->nw()->from({K=>"notTheWayIn!"});
    my $xiw = $xL->{i};
    
    my $h = {};
    my $ha = sub {
        my ($attr,$y,$w,$thing) = @_;
        push @{$h->{$attr}||=[]}, { y=>$y,w=>$w,t=>$thing };
    };
    my $x = {id=>$xL->{uuid}};
    for my $ya (['l',$ylw],['t',$ytw],['y',[$yiw]]) {
        my ($y,$yww) = @$ya;
        for my $w (@$yww) {
            if (defined(my $content = w $w B/s/value)) {
                $content = encode_entities($content);
                $ha->( content => $y,$w, $content );
            }
        }
    }
    
    w diagontrail[$xL, $yL, $ylw, $ytw, $yiw, $xiw, $x];
    return unless $xL->{depth} == 0;
    @$r = "HTML!";
  diagontrail: |
    my @diag = (">$xL->{depth}", $yL->{t}, $x);
    
    for my $ya (['l',$ylw],['t',$ytw],['y',[$yiw]]) {
        my ($y,$yww) = @$ya;
        push @diag, map {
            "!html $y ".
            (ref $_ eq "Way" ?
            ($_->pint             .($y ne 't' ?
                '<t style="color:white;">'.ki($_->{B}->{s}).'</t>' : "") )
            : "iww!www: $_")
        } @$yww
    }
    push @{ $G->{_trail} }, \@diag;
   

