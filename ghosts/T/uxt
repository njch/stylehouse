name: Styling
dials:
  max_depth: 7
  form: 42
hooks:

  T_end: |
    my $t = $G->{_trail} ||= [];
    my $xL = $L; 
    my $yL = $xL->{t};
    my $yLo = $yL->{o};
    my $ylw = [ grep { !$_->{Li} } @$yLo ];
    
    push @$t, ["ylw", @$ylw] if @$ylw;
    push @$t, [
    
      join("",("..")x$xL->{depth}),

      w $yL->{i} print,

      'yL-t:',$yL->{t},

      'yL:',$yL,
    
    ];
    
    # o[ s/...
    # (re)make i s...

    return unless $xL->{depth} == 0;
        
    my $html = "HTML!";
    
    @$r = $html;
    
    $t = {
        t => $t,
        G => $G->{name},
    };
    $G->timer(0.2, sub {
        $O->{O}->w(somewhere=>{thing=>$t,max_depth=>2});
    },"bailout");
   

