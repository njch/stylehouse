name: Styling
dials:
  max_depth: 7
  form: 42
hooks:

  T_end: |
    my $t = $G->{_trail} ||= [];
    my $xL = $L; 
    
    my $yL = $xL->{t};
    my ($ytw, $ylw) = ([],[]);
    for my $yw (@{$yL->{o}}) {
        if ($yw->{Li}) {
            push @$ytw, $yw
        }
        else {
            push @$ylw, $yw
        }
    }
    my $yiw = $yL->{i};
    if (!$yiw) {
        $yiw = $G->nw()->from({K=>"WayIn"});
    }
    my $xiw = $xL->{i};
    
    my $xso = $xiw->{x};
    my $xs = {};
    
    my $xt = {
        xLDepth => join("",("..")x$xL->{depth}),
        yLi =>  (ref $yL->{i} eq "Way" ? $yL->{i}->pint : "iww!www: $yL->{i}"),
        yLt => "$yL->{t}",
        yL => "$yL",
    };
    for my $ya (['l',$ylw],['t',$ytw],['y',[$yiw]]) {
        my ($y,$yww) = @$ya;
        $xt->{$y} = [ map { "$y ".
            (ref $_ eq "Way" ? $_->pint 
                ." ~ ".ki($_->{s})
            : "iww!www: $yL->{i}")
        } @$yww ]
    }
    
    push @$t, $xt;
    
    # o[ s/...
    # (re)make i s...

    return unless $xL->{depth} == 0;
        
    my $html = "HTML!";
    
    @$r = $html;
    
    $t = {
        t => $t,
        G => $G->{name},
    };
    $G->timer(0.2, sub {
        $O->{O}->w(somewhere=>{thing=>$t,max_depth=>3});
    },"bailout");
   

