name: code crawl
chains:
 - K: 'lib'#c
   Ki: 'styledir'
   arr_if: |
     0 && -d $thing."/lib"
   foreach_travel:
     each: glob $thing."/lib/*"
     
 - K: 'ghosts'
   Ki: 'styledir'
   arr_if: |
     -d $thing."/ghosts"
   foreach_travel:
     each: glob $thing."/ghosts/H/*"
    
 - K: 'FiEl'
   arr_if: |
     !ref $thing && -f $thing
   foreach_travel:
     each: `cat $thing`
dials:
  max_depth: 1
hooks:

