name: code crawl
include: T/ravel
chains:
 - K: 'stylefile'#c
   Ki: 'styledir'
   arr_if: |
     -d "$thing/lib" && -d "$thing/ghosts"
   foreach_travel:
     glob: |
       "$thing/style*", "$thing/not"
     find_files: |
       "$thing/lib", "$thing/ghosts"
     
 - K: 'ghost'
   Ki: 'stylefile'
   arr_if: |
     0 && $thing =~ /ghosts\// && die 'hoolla';
    
 - K: 'yaml'
   arr_if: |
     -f $thing && $thing =~ /keys/;
   foreach_travel:
     each: Way::load_yaml($thing);
dials:
  max_depth: 3
hooks:

