name: code crawl
include: T/ravel
chains:
 - K: 'lib'#c
   Ki: 'styledir'
   arr_if: |
     -d $thing."/lib"
   foreach_travel:
     each: glob $thing."/lib/*"
     
 - K: 'ghosts'
   Ki: 'styledir'
   arr_if: |
     -d $thing."/ghosts"
   foreach_travel:
     each: glob $thing."/ghosts/*/*"
    
 - K: 'yaml'
   arr_if: |
     -f $thing && $thing =~ /keys/;
   foreach_travel:
     each: Way::load_yaml($thing);
dials:
  max_depth: 2
hooks:

