         if ($file =~ /(mov|avi|mp4)$/i) {
             run 'ffmpegthumbnailer -s 420 -t 20% -i '.$file.' -o '.$th
         }
         else {
             run 'convert', $file, '-thumbnail','500x500', $th
         }
     }
     else {
         saygr " thumbnail  $file";
