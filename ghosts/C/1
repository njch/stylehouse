     for my $f (@ma) {
         $H->fixutf8($f);
         my $r;
         r.r = $f;
         r.r =~ s/^$u\///;
         r.s = r.r;
         r.c.path = "!pat/dire:/r.r";
         r.c.pi = 'dire';
         r.c.file = $f;
         push @{o.r}, $r;
         if (@{o.r} >= $thi) {
             o.more = @ma - @{o.r};
             last;
         }
     }
