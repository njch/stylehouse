
name: Ghost
hooks:
  _load_ways_post: |
      
    $S->w("load_ways_post");
    
    w trig_parent_child_init;
    
  trig_parent_child_init: |
    return if $S->{load_ways_count} > 1;
    my $g = $S;
    
    while ($g->{O} && ref $g->{O} eq "Ghost") {
        if ($g eq $S) {
            $g->{O}->w("child_recoded_init");
        }
        $g = $g->{O};
        $g->w("any_child_recoded_init");
    }

