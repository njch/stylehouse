
name: Ghost
hooks:
  _load_ways_post: |
      
    $S->w("load_ways_post");
    my $lwc = $S->{load_ways_count};
    say "LWC $lwc";
    $lwc == 1 ?
        w _fresh_init(%$ar)
      : w _recoded_init(%$ar)
    
  _recoded_init: |
    $S->w("recoded_init");
    $S->{O}->w("child_recoded_init")
        if $S->{O} && ref $S->{O} eq "Ghost";
    my $g = $S;
    say "from $g->{name}\t\tUpwards:".($g->{O}||"~undef~");
    $L->w('somewhere', {thing=>$g});
    while ($g->{O} && ref $g->{O} eq "Ghost") {
        $g = $g->{O};
        $g->w("any_child_recoded_init");
    }

