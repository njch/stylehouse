
name: Ghost
hooks:
  _load_ways_post: |
      
    $S->w("load_ways_post");
    my $lwc = $S->{load_ways_count};
    say "LWC $lwc";
    $lwc == 1 ?
        w fresh_init
      : w recoded_init 
    
  recoded_init: |
    my $g = $S;
    $g->w("recoded_init");
    say "from $g->{name}\t\tUpwards:".($g->{O}||"~undef~");
    while ($g->{O} && ref $g->{O} eq "Ghost") {
        if ($g eq $S) {
            $g->{O}->w("child_recoded_init");
        }
        $g = $g->{O};
        $g->w("any_child_recoded_init");
    }

