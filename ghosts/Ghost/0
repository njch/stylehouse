
name: Ghost
hooks:
  _load_ways_post: |
      
    $S->w("load_ways_post");
    w recoded_init if $S->{load_ways_count} < 1;
    
  recoded_init: |
    my $g = $S;
    $g->w("recoded_init");
    say "from $g->{name}\t\tUpwards:".($g->{O}||"~undef~");
    while ($g->{O} && ref $g->{O} eq "Ghost") {
        if ($g eq $S) {
            $g->{O}->w("child_recoded_init");
        }
        $g = $g->{O};
        $g->w("any_child_recoded_init");
    }

