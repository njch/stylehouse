






name: kasplat
tractors:
  - K: 'key'
    max_populi: 10
    arr_if: |
      $e
    B_: |
      $e
    first_time: |
      $S->{B}->{key} ||= $e->{k};
      $S->{B}->{key} ||= "";
      $S->{B}->{key} = lc($S->{B}->{key}) if !$e->{S};
    print: |
      my $and = "";
      for (qw{S C A M}) {
          $and .= "$_+" if $e->{$_} 
      }
      $and = "" if $and eq "S+";
      "key: $and$key"
hooks:
  first_init: |
    $H->JS("\$(window).on('keydown', keyhand);"); 
  any_init: |
    $H->JS("handelay = 5;"); 
    $H->JS("\$(window).on('keydown', keyhand);"); 
  arr: |
    my $e = $event;
    my $S = Arr[$e];

    my $k = 
    $S->{B}->{key};
    #L ^ here's _, 
    
    say `figlet '$k'`;
    
    my $t = $G->{trig};
    if ($t->{$k}) {
        Info "keytrig: $k", $S;
        $G->_0(sing => { 
        name => "keytrig $k",
        block_for => 0.07,
        code => sub {
            $t->{$k}->($S);
        }});
    }
    my $p =  w $S print;
    Info $p, $S;
    
  event: |
    #w throwlog(Event => $e);
    if (eval { $ar->{e}->[1]->{C} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#$id').empty();");
    }
    if (eval { $ar->{e}->[1]->{S} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#mess').toggleClass('inface');");
    }
    

