






name: kasplat
tractors:
  - K: 'key'
    max_populi: 10
    arr_if: |
      $e && $e->{k}
    B_: |
      Hostinfo::make_uuid()
    first_time: |
      $B->{key} ||= lc($e->{k}) unless $e->{k};
    print: |
      $B->{k}
hooks:
  any_init: |
    $H->JS("\$(window).on('keyup', keyhand);");
  arr: |
    my $e = $event;
    my $S = Arr[$e];
    Info "klogged", $S;
    Say "klogged: ". w $S print;
    
  event: |
    #w throwlog(Event => $e);
    if (eval { $ar->{e}->[1]->{C} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#$id').empty();");
    }
    if (eval { $ar->{e}->[1]->{S} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#mess').toggleClass('inface');");
    }
    

