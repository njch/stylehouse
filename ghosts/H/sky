
name: the sky
hooks:
  fresh_init: |
    # w< ...etc?
    w colours;
    w ambientness;
  recoded_init: |
      w doof;
      $G->{db} = 1;
  doof: |
    w colourchange(t=>200, c => '002');
    w touch;
  ambientness: |
    w colourchange(t=>15000);
    timer 19 { w ambientness };
  colours: |
    $G->{colours} = ['064','77a9a0','6699cF','3366cF',
    '000099','6B8FB2','6699cc','005F6B',
    'a699cF','4C3380',
    '336699','8F00B2',
    '336aa9','72a699','000099','6B8FB2','6B8FB2','0Caa'];
  colourchange: |
    $ar->{t} ||= 5000;
    $ar->{c} ||= w rotate_colourwheel;
    $H->JS($H->{sky},"animate({backgroundColor: '#$ar->{c}'}, $ar->{t});");
  touch: |
    $ar->{t} ||= 1000;
    w colourchange;
  rotate_colourwheel: |
    $G->{colours} || w colours;
    my $c = shift @{$G->{colours}};
    push @{$G->{colours}}, $c;
    return $c;
    

