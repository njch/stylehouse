
name: the sky
hooks:


  fresh_init: |
    H.sky = $G || die "There is no sky";
    w changesky;
    
    w ambientness;
    G.db = 3;
    G:colour->{db} = 3;
  changesky: |
    G:colour->w(Arr => {name => "#ux", %$ar, change => 1});
    die "Done";
  doof: |
    $ar->{t} ||= 0.1;
    w colourchange;
    Say "tousky";
    waylay 0.3 touch(t=>500);
  ambientness: |
    $G->susgdb;
    my $c = w colourchange(t=>5);
    w light;
    $G->mess(Ambientness => $c);
  light: |
    # some angles
  colourchange: |
    $ar->{t} ||= 5;
    $ar->{change} = 1;
    w changesky;
  getundercontrol: |
    $H->JS("\$('#mess').toggleClass('widdle').animate({'max-width': '26%'});");
  event: |
    w getundercontrol if $e->{C};
    w touch;
  touch: |
    $ar->{t} ||= 0.3;
    w colourchange;

