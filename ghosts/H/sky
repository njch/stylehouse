
name: the sky
hooks:
  V:
    sky:
      styles: sky
  styles:
    sky: |
      "height:$O->{horizon}",
      qw{background:#00248F width:100%
      position:absolute top:0px left:0px z-index:3
      }
  fresh_init: |
    $H->{sky} = G.V.sky || die "There is no sky";
    
    w changesky(set_css_background => "#sky");
    w ambientness;

  changesky: |
    HGf("colour")->w(Arr => {name => "#sky", %$ar});
  doof: |
    $ar->{t} ||= 0.1;
    #$ar->{c} ||= '333';
    w colourchange;
    waylay 0.3 touch(t=>500);
  ambientness: |
    $G->susgdb;
    my $c = w colourchange(t=>5);
    w light;
    $G->mess(Ambientness => $c);
    
    waylay 22 ambientness;
  light: |
    $JS->
  colourchange: |
    $ar->{t} ||= 5;
    $ar->{change} = 1;
    w changesky;
  getundercontrol: |
    $H->JS("\$('#mess').toggleClass('widdle').animate({'max-width': '26%'});");
  event: |
    w getundercontrol if $e->{C};
    w touch;
  touch: |
    $ar->{t} ||= 0.3;
    w colourchange;

