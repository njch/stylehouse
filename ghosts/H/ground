
name: the ground
hooks:
  styles:
    ground: |
      "top:$O->{horizon}",
      qw{width:100% height:100% background:#A65300
      overflow:none position:absolute z-index:-1
      }
  flood_init: |
      $H->{ground} = $G->_0(V=>{K=>'ground'});

      $H->{flood} = $H->{ground}->spawn_floozy($G, "flood",
          "width: 22%; min-width:3em; background: #337921aa;"
          ." height: 100%; overflow: scroll;position: absolute; background-image: url(greencush.jpg); right:0px;z-index:-1;"
      );
      my $fm = $H->{flood}->spawn_ceiling(
          "flood_ceiling",
          "width: 100%; height: 4.20em; background: #301a30; color: #afc; font-weight: bold;",
      );

