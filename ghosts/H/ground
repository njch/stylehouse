
name: the ground
hooks:
  styles:
    ground: |
      "top:$O->{horizon}",
      qw{width:100% height:100% background:#A65300
      overflow:none position:absolute z-index:-1
      }
  flood_init: |
      my $self = $O->{O};
      
      my $ground = $G->_0(V=>{K=>'ground'});
      die $self->{V}->{ground};

      my $f = $self->{V}->{ground}->spawn_floozy($self, "flood",
          "width: 22%; min-width:3em; background: #337921aa;"
          ." height: 100%; overflow: scroll;position: absolute; background-image: url(greencush.jpg); right:0px;z-index:-1;"
      );
      my $fm = $f->spawn_ceiling(
          "flood_ceiling",
          "width: 100%; margin:1em; height: 4.20em; background: #301a30; color: #afc; font-weight: bold;",
      );

      $self->{floodzy} = $f->spawn_floozy(
          floodzy => "width:100%;  background: #0000FF; color: black; height: 100px; font-eight: 7em;",
      );

