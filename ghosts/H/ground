
name: the ground
hooks:

  styles:
    ground: |
      qw'
      width:100% height:100% background:rgba(240,30,0,0.4)
      overflow:none position:absolute z-index:-1
      '
    flood: |
      qw'
      width:22% right:0px min-width:3em height:100%
      overflow:scroll position:absolute z-index:-1
      background-color:#000
      '
    flood_ceiling: |
      qw'bold
      width:100% background:#301a30 color:#afc
      '
  flood_init: |
    $H->{ground} = $G->_0('V/spawn' =>
        {name=>'ground', styles => 'ground'}
    );
    H.flood = $G->_0('V/spawn' =>
        {name=>'flood', styles => 'flood', from => H.ground }
    );
    H.flood->spawn_ceiling("flood_ceiling",
        $G->styles('flood_ceiling')
    );
  event: |
    `touch /s/stylehouse.pl`;

