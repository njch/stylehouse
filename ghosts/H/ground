
name: the ground
hooks:

  styles:
    ground: |
      "top:$O->{horizon}",
      qw{width:100% height:100% background:#A65300
      overflow:none position:absolute z-index:-1
      }
    flood: |
      qw{width:22% right:0px min-width:3em height:100%
      overflow:scroll position:absolute z-index:-1
      background-color:#000
    flood_ceiling: |
      qw{width:100% height:4.20em background:#301a30 color:#afc font-weight:bold}
  flood_init: |
    $H->{ground} = $G->_0('V/spawn' =>
        {name=>'ground', styles => 'ground'}
    );
    H.flood = $G->_0('V/spawn' =>
        {name=>'flood', styles => 'flood', from => H.ground }
    );
    H.flood->spawn_ceiling("flood_ceiling",
        $G->styles('flood_ceiling')
    );

