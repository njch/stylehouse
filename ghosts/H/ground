
name: the ground
hooks:
  styles:
    ground: |
      "top:$O->{horizon}",
      qw{width:100% height:100% background:#A65300
      overflow:none position:absolute z-index:-1
      }
    flood: |
      qw{width:22% right:0px min-width:3em height:100%
      overflow:scroll position:absolute z-index:-1
      background-image:url(i/greencush.jpg}
    flood_ceiling: |
      qw{width:100% height:4.20em background:#301a30 color:#afc font-weight:bold}
  flood_init: |
        $H->{ground} = $G->_0(V=>{K=>'ground'});

        $H->{flood} = $H->{ground}->spawn_floozy($G, "flood", $G->_0(style=>{K=>'flood'})); 
        $H->{flood}->spawn_ceiling("flood_ceiling", $G->_0(style=>{K=>'flood_ceiling'}));

