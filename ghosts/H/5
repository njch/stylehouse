  lifage: |
    sayyl "Life! of meta.y meta.id";
    0->tai("meta.y/meta.id\.i", $meta);
    my $tinymeta = {map{$_=>$meta->{$_}}qw{id y}};
    0->tac("V/H.style/H.name/H.id\.meta.y", $tinymeta);
  emana: |
    # yoyoyo
