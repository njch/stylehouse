  duu:
    W: |
        for (qw'id ux W') {
            delete $e->{$_} unless $e->{$_} =~ /^\w+$/;
        }
        my $W;
        my $findL = sub {
          my $id = shift || return;
          my ($L) = grep { _.uuid eq $id } @{W.script||[]};
          $L;
        };
          return sayyl "bung w... not words" if !e.W;
      
        $W = H.G.A.W->{e.W} if H.h;
        ($W) = grep { _.id eq "Wormhole-e.W" } @{$H->get("Wormhole")}
            if !H.h;
      
        return sayyl "not W here ... e.W" unless $W;
          my $E = {};
        E.W = $W;
        E.L   = $findL->(e.id);
        E.uxL = $findL->(e.ux);
        E.e = $e;
      
          E.W.G->w('event', $E);
    TV: |
      my $id = $e->{id};
      return sayyl "avoiding TV" if H.h;
      my $thing = $H->tv_by_id($id) if $id;
      
          if ($thing) {
              sayyl "TV  $thing->{id}";
              $thing->event($e);
          }
          else {
              sayyl "TV not found".( $id ? ": $id" : ", lacking id");
              

              if (my $catcher = $H->get('clickcatcher')) {
                  sayyl "Event catcher found: $catcher";
                  $catcher->event($e);
              }
              else {
                  sayyl "NOTHING" for 1..4;
              }
          }
          sayyl "event handled in ".$G->F_delta()."\n\n";
  

