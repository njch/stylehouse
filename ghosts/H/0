    waylay in;
      
  jaw: |
    my $s = $H->mkuuid();
    ($s) = reverse split '-', $s;
    G.jaws->{$s} = delete ar.cb; # TODO a Z awaits, sucks $m
    ar.m = 
        " var e = function(){ $js };"   
        ."var m = e();"
        ."s\.reply({jaw:{s:'$s',e:m}});";
    w send_Elvis;

  reS: |
    sayyl "S > $m";
    $m =~ /^(\S+) ?(.+)?$/ ? do{    w S/$1(%$ar,m=>$2); } : die "wtf iS $m ???";
  S:
