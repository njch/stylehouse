hooks:
  fresh_init: |
    say "     H Fresh init H.style H.name";
    H._future = 1;
    push @{G.GGs||=[]}, $G; # H self
    
    H.r = w enRedis;
    w figure_port;
    
    my $reS = sub { w reS(m => shift->{m}); };
    0->su(S => $reS);
    0->su("S/H.style/H.name" => $reS);
    
    
