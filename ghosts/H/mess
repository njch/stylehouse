






name: kasplat
include: W/tractor
tractors:
  - K: 'mess'
    populi:
      max: 10
    B_: |
      for (qw{Vitals Ambientness}) {
          return $_ if $what eq $_ ;
      }
      return $thing;
    arr_if: |
      $thing && $what
    first_time: |
      S.K="m$what";
      S.Flab = $G->Flab($S);
    wheresplain: |
      $S->{waystack} ? w $S->{waystack} wheresplain : "";
    print: |
      join " ", $S->{K}, ghostlyprinty($thing);
hooks:
  fresh_init: |
    H._future = 1;
  mess: |
    my $S = w Arr[$thing, $what];
    return "yep" if $what eq "Info" && $thing->[0] =~ /^keypress/;
    return 'yep' if $what !~ /^(say|info|error)$/i;

