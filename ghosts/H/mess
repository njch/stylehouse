






name: kasplat
hooks:
  fresh_init: |
    G TT ->G("T/crawl");
  throwlog: |
    my ($what, $e) = %$ar;
    
    G crawl ->RW;
    G crawl ->crank(max_depth=>3);
    G crawl ->T( {$what => $e} );
    
    G splat Tw splat_wormhole(somewhere => G(crawl)->W);
  event: |
    #w throwlog(Event => $e);
    if (eval { $ar->{e}->[1]->{C} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#$id').empty();");
    }
    if (eval { $ar->{e}->[1]->{S} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#mess').toggleClass('inface');");
    }
    

