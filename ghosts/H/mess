






name: kasplat
tractors:
  - K: 'mess'
    max_populi: 10
    arr_if: |
      $thing && $what
    B_: |
      $thing
    first_time: |
      $S->{K}="m$what";
    wheresplain: |
      $S->{waystack} ? w $S->{waystack} wheresplain : "";
    print: |
      join " ", $S->{K},
      do { w $S wheresplain },
      $S->{B}->{thing}->[0]
hooks:
  fresh_init: |
  throwlog: |
    my $S = Arr[$thing, $what];
    $G->{_post_throw} && $G->{_post_throw}->($S);
    
  event: |
    #w throwlog(Event => $e);
    if (eval { $ar->{e}->[1]->{C} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#$id').empty();");
    }
    if (eval { $ar->{e}->[1]->{S} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#mess').toggleClass('inface');");
    }
    

