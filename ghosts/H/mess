






name: kasplat
tractors:
  - K: 'mess'
    arr_if: |
      $thing && $what
    B_: |
      $thing
    first_time: |
      $S->{K}="m$what";
      $S->{crawl_W_S} = []
    crawl: |
      my $Cr = $G->Gf("T/crawl");
      $Cr->RW;
      $Cr->W->{script} = $S->{crawl_W_S};
      $Cr->T($thing);
      
    print: |
      $S->{K} .": ". $S->{B}->{thing}->[0]
hooks:
  fresh_init: |
    G TT ->G("T/crawl");
  throwlog: |
    my $S = Arr[$thing, $what];
    w $S crawl;
    
  event: |
    #w throwlog(Event => $e);
    if (eval { $ar->{e}->[1]->{C} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#$id').empty();");
    }
    if (eval { $ar->{e}->[1]->{S} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#mess').toggleClass('inface');");
    }
    

