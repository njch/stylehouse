






name: kasplat

C:
  - K: 'mess'
    # Gw: 1 # TODO cannot handle?
    print: |
      ref $thing eq "Way" || ref $thing eq "C" ? $thing->pint : ghostlyprinty($thing);
    wheresplain: |
      $S->{waystack} ? w $S->{waystack} wheresplain : "";
      "roar!";
hooks:
  fresh_init: |
    H._future = 1;
    G.trigs = [];
    G.populi.max = 10;
  atrig: |
    push @{G.trigs}, $D;
  Arr: |
    my $S = 0->TB(mess => {thing => $thing, what => $what});
    S.K="m$what";
    S.Flab = $G->Flab($S);
    
    
    $_->($S) for @{G.trigs};
    
    my $s = G.W.script;
    shift @$s until @$s <= 10;
    
    say "trigless mess... $what =   ". join"  ", map {gpty($_)} flatline($thing)
        unless @{G.trigs};
    
    return "yep" if $what eq "In"."fo" && $thing->[0] =~ /^keypress/;
    return 'yep' if $what !~ /^(s(a)y|i(n)fo|e(r)ror)$/i;
    return;

