






name: kasplat
tractors:
  - K: 'mess'
    arr_if: |
      $thing && $what
    first_time: |
      $S->{crawlWS} = []
    crawl: |
      my $Cr = $G->Gf("T/crawl");
      $Cr->RW;
      $Cr->W->{script} = $S->{crawlWS};
      $Cr->T($thing);
      
    print: |
      $S->{K} .": ". $S->{B}->{thing}
hooks:
  fresh_init: |
    $G->Gc("T/crawl");
    G crawl ->T("hello");
    say "wormhole now ".G crawl ->W->describe_size();
  throwlog: |
    my $S = Arr[$thing, $what];
    w $S crawl;
    
  event: |
    #w throwlog(Event => $e);
    if (eval { $ar->{e}->[1]->{C} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#$id').empty();");
    }
    if (eval { $ar->{e}->[1]->{S} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#mess').toggleClass('inface');");
    }
    

