






name: hostinfo
hooks:
  load_ways_post: |
    unless (G splat ) {
        G TT ->G("T/splat");
        G TT ->G("T/crawl");
    }
  throwlog: |
    my ($what, $e) = %$ar;
    
    G crawl ->RW;
    G crawl ->crank(max_depth=>4);
    G crawl ->T( {$what => $e} );
    
    G splat Tw splat_wormhole(trev => G(crawl)->W);
  event: |
    #w throwlog(Event => $e);
    if (eval { $ar->{e}->[1]->{C} }) {
        my $id = $ar->{e}->[1]->{id};
        $H->JS("\$('#$id').empty();");
    }
    

