
name: H colour
tractors:
  - K: 'H/colour'
    arr_if: |
      $name || die;
    B_: |
      $name
    print: |
      $S->{K} .": ". $S->{B}->{_}
    first_time: |
      $S->{B}->{personalities} ||= [
          sub { int rand 123 },
          sub { int rand 255 },
          sub { 100 + int rand 155 },
          sub { int rand 88 },
      ];
    change_person: |
      push @$personalities, shift @$personalities;
    randomcolour: |
      if ($ar->{e} && $ar->{e}->{C}) {
          w $S change_person;
      }
      my ($as) = @$personalities;
      my ($rgb) = join", ", map {$as->()} 1 .. 3;
      return $S->{B}->{colour} = "rgb($rgb)";
hooks:
  have: |
    my $S = Arr[$name];
  arr: |
    my $S = Arr[$name];

    my $cmback = ".$texty->{id} > .CodeMirror";
    my $colour = $H->{G}->w("colour",
        {name => "Codon/$self->{name}",
        set_css_background => $cmback,
    });
  randomcolour: |
    my $S = Afind[$name];
    return w $S randomcolour(%$ar);
  change_person: |
    my $S = Afind[$name];
    return w $S change_person;

