                my $splatter = delete $si->{$name};
                if ($splatter > 1 && p.again) {
                    sayre "Gsing $splatter again! $name";
                    $G->sing($name, $code, %$p);
                }
            }, "sing-block        $name");
            
            $si->{$name} = 1;
            $code->();
        }, "pre-sing     $name");
