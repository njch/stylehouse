  - K: ki #c
    style: func
    D: |
      my ($re,$ar,$d) = @_;
      $d++;
      if ($re !~ /^\d+$/ && !$ar) {
          $ar = $re;
          $re = 2;
      }
      if (!ref $ar || "$ar" !~ /(HASH)/) {
          return "!%:$ar";
      }
      #
      my $lim = 150 - (150 * ($d / 3));
      my @keys = sort keys %$ar;
      @keys = ('name') if ar.name && ar.bb;
      join ' ', map {
          my $v = $ar->{$_};
          $v = "~" unless defined $v;
          ref $v eq 'HASH'
              ? "$_=".($re ?  "{ ".slim($lim,ki($re-1, $v,$d))." }" : "$v")
          : ref $v eq 'ARRAY'
              ? do "$_=\@x".@$v.(@$v < 9 && slim(19, join", ",@$v))
              : "$_=".slim(150,"$v")
      } sort keys %$ar;
  - K: kk #c
    style: func
    D: |
      my ($s,$lum) = @_;
      $lum ||= 1;
      my $d = (3 - $lum);
      my $lim = 150 - (150 * ($d / 3));
      !ref $s || "$s" !~ /(ARRAY|HASH)/ && return "!%:$s";
      join ' ', map {
          my $v = $s->{$_};
          $v = "~" unless defined $v;
          ref $v eq 'HASH'
              ? "$_=".($lum ?  "{ ".slim($lim,ok($v,$lum-1))." }" : "$v")
          : ref $v eq 'ARRAY'
              ? "$_=\@x".@$v
              : "$_=".slim(150,"$v")
      } sort keys %$s;
