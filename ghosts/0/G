  - K: ghostlyprinty #c gone ish
    style: func
    D: |
        $gp_inarow++;
        my $witcolour = sub { '<t style="color:#'.($_[1] || '8f9').';">'.shift.'</t>' };
        my $nohtml;
        if ($_[0] && $_[0] eq "NOHTML") {
            shift;
            $nohtml = 1;
            $witcolour = sub { shift };
        }
        
        my @t = @_;
        my @s;
        for my $t (@t) {
            if ($t && ref $t eq "ARRAY") {
                if ($gp_inarow > 5) {
                    push @s, "ghostlyprinty recursion!";
                    next;
                }
                push @s, map { "[".ghostlyprinty(($nohtml?("NOHTML", $_):($_))) } @$t;
            }
            elsif (ref $t eq 'HASH') {
                push @s, '%{';
                if (3 == grep { $_ =~ /^(.+)\t(.+?)$/ } 
                    (shuffle keys %$t)[0,1,2]) {
                    push @s, "st%le";
                }
                if (t.name) {
                    push @s, "name=t.name";
                }
                if (t.r) {
                    push @s, "r=t.r";
                }
                if (t.bb) {
                    push @s, "* ".scalar(keys %$t);
                }
                if (@s == 1) {
                    push @s, slim(200, ki($t));
                }
                push @s, '}%';
            }
            elsif (ref $t) {
                push @s, $witcolour->(ref($t), "333;font-size:50%");
                my $name = gname($t);
                push @s, $witcolour->($name);
            }
            else {
                push @s, (defined $t ? $t : "~")
            }
        }
        $gp_inarow--;
        join "  ", @s
        
