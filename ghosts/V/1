 - K: pi/thumbnail #c image/video
   D: |
     my $size = -s $file;
     return unless $file =~ /jpe?g$/i;
     my $mou = "public/";
     #return if $size > 3_000_000;
     my ($first) = split '/', $file;
     die "$first not $mou?" unless -e "$mou$first";
     
