
Ds:
 - K: wtf #c
   D: |
    my $a = shift;
    # fractionating importantness into spacetime
    if (a.way && a.div) { # spawn
        a.now ||= 0;
        R.wtf->{a.way} = $a;
        return;
    }
    # inf
    my $riv = R.wtf ||= {};
    while (my ($way,$r) = each %$riv) {
        r.now++;
        if (r.now >= r.div) {
            r.now = 0;
            R.G->timer(0.0000001, sub {
                r.last_hit = $H->hitime;
                return r.D->() if r.D;
                R.G->w("$way");
            });
        }
    }

