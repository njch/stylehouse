
name: o
C:
  - K: Hi
hooks:
  fresh_init: | # sub hostinfos before w in does our hostinfo
    $G->su("Hi", sub { my $m = shift; w Hi[$m]; });
    $G->su("Hostinfo", sub { my $m = shift; w Hostinfo[$m] });
    $G->recur(10, sub {
        my $fi = `find ghosts -type f`;
        $fi =~ s/\n/ /g;
        saygr "lies: ".((`wc -l $fi`)[-1]  =~ /(\d+) total/)[0];
    });
    
    H.G w hostinfo;
    
  in: |
    $G->timer(9, sub{w Hiwtidy;});
  Hostinfo: |
        my ($hol, $inf) = split ' ', $m, 2;
        $G->pub("S/$hol", "hostinfo/ack $m", 'ig');
        saygr "from $hol -> $inf";
        G.hostinfo->{$hol} = {
            info => $inf,
            when => $H->hitime,
        };
  Hi: |
      saygr "Hostinfo to $m";
      my ($hol, $m) = split ' ', $m, 2;
      (my $sn = $hol) =~ s/\/\w+$//;
      
      my @olds = glob("life/H/$sn/*");
      for my $oth (@olds) {
          $oth =~ s/^.+H\///;
          my ($Hid) = reverse split '/', $oth;
          sayre "o $oth";
          if ($oth eq $hol) {
              sayyl " haf self";
                next;
          }
          my $js;
          for my $vh (glob("life/V/$Hid*")) {
              my (@v) = split '/', $vh;
              my $ww = $v[2];
              $js .= w jsrm(id=>$ww);
              sayre "DEL $vh   && W/$ww";
              #H.r->del($vh);
              #H.r->del("W/$ww");
          }
          $H->send($js) if $js;
          sayre "DEL H/$oth";
          #H.r->del("H/$oth");
      }
  jsrm: |
    " \$('#ux > #$id').fadeOut(1000, function() { \$(this).remove(); });";
  Hiwtidy: |
    my $js = 
    " var e = []; \$('#ux > ww').each(function(){"
        ."e\.push(\$(this).attr('id'));" # could take more clues
    ."});"
    ."return e\.join(' ');";
    my $cb = sub { my $m = shift; w Hiwtidy_ja[$m]; };
    H.G w jaw[$js, $cb];
  Hiwtidy_ja: |
    my @W = split ' ', $m;
    @W = grep { !H.r->get("W/$_") } @W;
    say "Wild: @W";
    my $js;
    for (@W) {
        # TODFO javascript guns
        #die;
        $js .= w jsrm(id=>$_);
    }
    saybl $js;
    $H->send($js) if $js;
    say "Done Hiwtidy";
    
  reextet: |
    my @also = uniq map { /^H\/(.+)\/.+?$/ } H.r->keys("H/*");
    @also = grep {$_ ne "H.style/H.name"} @also;
    `rm $_` for `find life/ -type f`;
    $G->pub('S/hut/O', "reextet ".join",",@also);
    H.G w reexec;
    

