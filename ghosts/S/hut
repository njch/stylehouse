hooks:

  node:
    C:
      - D: |
          sayre "Gahahaha!";
      - GAK: C
    S:
       - GAK: bacg C/ool
         P:
          - K: Ims
            flo: 2
            B:
              dir: /s/public/i
          - GAK: U
            InC:
                 W:
                   Z:
                     z-index: -1
                     background: url(i/greencush.jpg)
    Z:
      - GAK: 0
      - D: |
          $G->recur(12, sub {
                saygr "lies: ".((`wc -l ghosts/*/*`)[-1]  =~ /(\d+) total/)[0];
          });
          $G->recur(0.4, sub {
              say "gd";
              w gitdission;  
          });
  aj: |
    my $uW = j.G.uW;
    my $ww = uW.at.id;
    my $to = $ww;
    if (j._) {
        saygr j.G->pi." unified field!";
        $to .= "/_";
        # ww homing
        my $hol = "H.style/H.name/H.id";
        my $etc = 1 if uW.at.styles =~ /\bNZ\b/;
        my $hold = join ' ', $hol, $etc;
        H.r->set("W/$ww" => $hold);
        H.r->set("V/H.id/$ww" => 1);
        
        H.G.A.W->{j._.at.id} = j.G.W;
    }
    
    my @lot = reverse @{j.s}; # until whole
    push @lot, reverse @{j.c}; # from whole
    
    return sayre "empty" unless @lot;
    
    @lot = join " ", @lot;
    for my $m (@lot) {
        ref $m && die;
        $m = " $m";
        H.G w send_Elvis[$m, $to]; 
    }
    
    if (j._) { # TODO on O
        saygr "j.G.name unified field hits tiles!";
        #0->sing(retile => sub { w retile[$E]; }, begin => 0.8);
    }
    
  send_Elvis: |
    my $to = "Elvis/H.style/H.name";
    $to .= "/ar.to" if ar.to;
    $H->pub($to, ar.m);

