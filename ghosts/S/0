name: Styles
hooks:
  stylehut:
    minorport: |
      my $p = ord(H.name);
      $p += 8000;
      say "Sport: $p";
      $p;
    in: |
      waylay stylehut/play; # get going right away
    play: |
      H.h = G.A->spawn(G => "Ϡ", 'S', "S/H.style", "S/H.style/H.name");
    
    elvus: |
      sayg "elvission modio";
      G:Ϡ w elvis_enters;
    
    singul: |
      sayg "sSingu mode";
      G:Ϡ w elvis_enters;
      
      w wtf(div => 1, way => 'gitdission');
      
      w z/clon;
      w z/keon;

      Mojo::IOLoop->recurring(6 => sub{ w stylehut/honk; });
    honk: |
      $H->send('.'. (("  ")x int(2 + rand 3))."!!!");
      
      
  styleshed:
    in:
      w wtf(div => 1, way => 'gitdission');
      
      
    elvibe: |
      w stylehouse/flood;
      w styleshed/play;
      G:Ϡ w elvis_enters;
      
    play: |
      G!H/keys;
      
      G!Ϡ;
      
      my $Dambi = sub { G:sky w ambientness; };
      w wtf(div => 26, way => 'sky amb', D => $Dambi);
      
  stylehouse:
    elvibe: |
      w stylehouse/flood;
      w stylehouse/play;
    flood: |
      w z/getgeometry;
      w z/empty_body;
      w z/clon;
      
      G!H/colour; # TODO R
      G!H/sky ->w('flood_init');
      
      H.notunderworld = 1;
    play: |
      G!H/ground ->w('flood_init');
      Git->new($H->intro);
      Codo->new($H->intro);
      w z/hitground;

