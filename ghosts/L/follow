
name: trail of ways...
tractors:
  - K: Thing
    arr_if: |
      1
    B_: |
      $ar->{name} if $ar->{name};
      $thing
    print: |
      $B->{name} || $B->{thing};
hooks:
  recoded_init: |
    my $thing = G(tractor)->w('random');
    $O->w('somewhere', { thing => $thing } );
  arr: |
    my $name = $ar->{name};
    die "$name $thing";
    my $S = Arr[$thing, $name];
  narr: |
    my ($name, $thing) = %$ar;
    w arr[$thing, $name];
    # etc;
    

