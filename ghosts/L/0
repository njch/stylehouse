name: Lyricoso writoro
hooks:
  load_ways_post: |
    unless (G splat ) {
        G TT ->G("T/splat");
        
        G TT ->G("T/crawl");
        G TT ->G("L/follow");
        G TT ->G("L/ob");
        
        w set_follow;
    }
    
    $G->{H} = $H;
    w getstarted;
  any_child_recoded_init: |
    w splat_wormholes;
  set_follow: |
    G follow ->RW;
    
    my $dfs = w default_somewhere;
    G follow T $dfs;
    G follow T G ob;
    G follow T $H;
    G follow T $O;
    G follow T G(follow)->W;
    G follow T \@F;
    
    G splat Tw Splat(wing => G(follow)->W);
  default_somewhere: |
    ["".localtime, $H->data->{Ghost},$H->data->{Wormhole}, $G]
  getstarted: |
    $G->unrush('getstarted') || return;
    
    $H->Say("ẞ");
    
    my $thing = w default_somewhere;
    
    my $u = G crawl ->crank(max_depth=>2);
    w somewhere[$thing];
    $u->();
  somewhere: |
    my $thing = $ar->{thing};
    my $wormhole = $ar->{wormhole};
    
    
    my $Cr = G crawl;
    #$Cr->{_ob} = G ob;
    say "" for 1..5;
    say join"", ("       ẞ           ")x38;
    start_timer();
    
    
    if ($wormhole) {
        $G->{the_W} = $wormhole;
    }
    else {
        $Cr->RW;
        
        my $u;
        if (ref $thing eq "HASH" && $thing->{antf}) {
            #$u = $Cr->crank(max_depth => 4);
        }
            
        $G->w("R", {for => G(crawl)}, G(ob));
        
        $Cr->T($thing, undef, $G->nw()->from({print=>'"L0sw "',F => [@F]}));
        
        $u->() if $u;
        $G->{the_W} = $Cr->W;
    }
    my $crawltime = show_delta();

    w splat_wormholes;
    
    Say "W x$wormhole->{n} for ".($wormhole->{G}->{name}||"$thing")."\n$crawltime   ".show_delta();
  splat_wormholes: |
    return unless G(crawl);
    G splat Tw Splat(trev => $G->{the_W});
    G splat Tw Splat(ob   => G(ob)->W   );
    
  splatmenues: |
    my $ob = G(ob)->W;
    ob => sub { 
    
    w somewhere(wormhole => $ob) };

